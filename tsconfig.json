{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true, // Allow default imports from modules without a default export
    "esModuleInterop": true,    // Enable compatibility with CommonJS modules

    "outDir": "./dist",
    "baseUrl": ".",
    "@/*": ["src/*"],       // Custom path mappings if needed
    "~/*": ["src/*"],       // Custom path mappings if needed

    //    "forceConsistentCasingInFileNames": true,
    "strict": true
    //    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
